{
  "name": "todo-app-playwright-test",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:e2e": "playwright test",
    "test:all": "cross-env NODE_OPTIONS=--loader=ts-node/esm TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js",
    "test:chromium": "cross-env NODE_OPTIONS=--loader=ts-node/esm TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js --tags=@chromium",
    "test:firefox": "cross-env NODE_OPTIONS=--loader=ts-node/esm TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js --tags=@firefox",
    "test:webkit": "cross-env NODE_OPTIONS=--loader=ts-node/esm TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js --tags=@webkit",
    "test:pixel5": "cross-env NODE_OPTIONS=--loader=ts-node/esm TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js --tags=@pixel5",
    "test:iphone12": "cross-env NODE_OPTIONS=--loader=ts-node/esm TS_NODE_PROJECT=tsconfig.cucumber.json cucumber-js --tags=@iphone12"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
